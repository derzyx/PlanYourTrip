    <style>
        body{
            margin: 0;
            overflow:hidden;
        }

        h-100{
            height:100%;
        }

        .leftBlock{
            background-color:red;
        }

        .left{
            position:fixed;
            left: 0;
            width: 20%;
        }
        
        .centerBlock{
            background-color:white;
        }
        
        .center{
            width:60%;
            height:100vh;
            margin-left: 20%;
            overflow:auto;
        }
        
        .rightBlock{
            background-color:gray;
        }

        .right{
            position:fixed;
            right: 0;
            width: 50%;
        }

        .point{
            margin: 0 auto;
            min-height:100px;
            border: 1px solid;
            border-radius: 10px;
            padding: 20px;
        }

        .pointContainer{
            position: relative;
            padding:0;
            margin: 0 auto;
        }

        .pointContainer::after{
            content:'';
            display:block;
            height:50px;
            width:50%;
            border-right: 5px solid green;
        }

/*        .line{
            height:50px;
            width:50%;
            border-right: 5px solid green;
        }*/

        .addPoint{
            display:flex;
            justify-content:center;
            text-align:center;
        }

        .addPoint p{
            font-size:2.3vh;
            margin:auto;
        }


        .pointAttrKey, .pointAttrValue{
            width: 49%;
            border: none;
            background-color: transparent;
            min-width: 10px;
            max-width: 100%;
            z-index:9;
        }

        .pointAttr{
            position: relative;
            font-family:monospace;
        }

        .pointAttrKey:hover, .pointAttrValue:hover{
            cursor:text;
            background-color: white;
        }

        .pointAttrKey:focus, .pointAttrValue:focus{
            background-color: white;
        }

        .pointAttrKey:not(:focus), .pointAttrValue:not(:focus){
            background-color: transparent;
        }

        .attrBtn{
            padding:0 5px;
            background-color: white;
        }

        .attrBtns{
            position: absolute;
            width: 106px;
            right: 0;
        }

        .addBranchBtn{
            position: absolute;
            right: 0;
        }

        .addBranchBtn button{
            padding: 0 5px;
        }
    </style>
</head>
